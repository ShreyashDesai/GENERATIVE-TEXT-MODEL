ðŸ“Œ Cell 2 â€” Import Libraries
from transformers import pipeline

ðŸ“Œ Cell 3 â€” Create Text Generation Pipeline
# Load GPT-2 text generation model
generator = pipeline("text-generation", model="gpt2")
print("Model loaded successfully!")

ðŸ“Œ Cell 4 â€” User Prompt Input
prompt = input("Enter your topic or starting sentence: ")
print("\nGenerating text...\n")

ðŸ“Œ Cell 5 â€” Generate Text
output = generator(
    prompt,
    max_new_tokens=200,     # Increase for longer paragraphs
    temperature=0.7,        # Creativity level
    top_p=0.9,              # Nucleus sampling
    repetition_penalty=1.2  # Avoid repeating sentences
)

generated_text = output[0]['generated_text']

print("=== GENERATED TEXT ===\n")
print(generated_text)

ðŸ“Œ Cell 6 â€” Save Output to File
import os

# Ensure results folder exists
os.makedirs("results", exist_ok=True)

path = "results/generated_text.txt"

with open(path, "w", encoding="utf-8") as f:
    f.write(generated_text)

print(f"\nText saved successfully to: {path}")

ðŸ“Œ Cell 7 â€” Display Final Message
print("âœ” Text Generation Completed Successfully!")
print("âœ” Output saved at results/generated_text.txt")
